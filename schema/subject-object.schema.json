{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://readium.org/webpub-manifest/schema/subject-object.schema.json",
  "title": "Subject Object",
  "type": "object",
  "properties": {
    "name": {
      "$ref": "language-map.schema.json"
    },
    "sortAs": {
      "$ref": "language-map.schema.json"
    },
    "code": {
      "type": "string"
    },
    "scheme": {
      "type": "string",
      "format": "uri"
    },
    "links": {
      "type": "array",
      "items": {
        "$ref": "link.schema.json"
      }
    }
  },
  "required": [
    "name"
  ]
}

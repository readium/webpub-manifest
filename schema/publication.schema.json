{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://readium.org/webpub-manifest/schema/publication.schema.json",
  "title": "Readium Web Publication Manifest",
  "type": "object",
  "properties": {
    "@context": {
      "type": ["string", "array"],
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "metadata": {
      "$ref": "metadata.schema.json"
    },
    "links": {
      "type": "array",
      "items": {
        "$ref": "link.schema.json"
      },
      "uniqueItems": true
    },
    "readingOrder": {
      "type": "array",
      "items": {
        "$ref": "link.schema.json"
      },
      "uniqueItems": true
    },
    "resources": {
      "type": "array",
      "items": {
        "$ref": "link.schema.json"
      },
      "uniqueItems": true
    },
    "toc": {
      "type": "array",
      "items": {
        "$ref": "link.schema.json"
      }
    }
  },
  "required": [
    "metadata",
    "links",
    "readingOrder"
  ],
  "additionalProperties": {
    "$ref": "subcollection.schema.json"
  },
  "allOf": [
    { "$ref": "extensions/epub/subcollections.schema.json" },
    {
      "description": "All resources listed in the reading order should contain a media type.",
      "properties": {
        "readingOrder": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "type"
            ]
          }
        }
      }
    },
    {
      "description": "All resources listed in the publication should contain a media type.",
      "properties": {
        "resources": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "type"
            ]
          }
        }
      }
    }
  ]
}